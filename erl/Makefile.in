PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@
ERLC_FLAGS := -W
EBIN_DIR := ./ebin
EMULATOR := beam
ERL = erl
ERLC = erlc
SILENCE = @

ERL_SOURCE_DIRS = \
	./src

TEST_DIRS = \
	./test

ERL_SOURCES := $(wildcard src/*.erl)
TEST_SOURCES := $(wildcard ../etest/test_*.erl)
ERLDIR = @ERLDIR@

#Helper Functions
get_src_from_dir  = $(wildcard $1/*.erl)
get_src_from_dir_list = $(foreach dir, $1, $(call get_src_from_dir,$(dir)))				        
src_to_beam = $(subst ./src, ./ebin, $(subst .erl,.beam,$1))
# src_to_beam = $(subst .erl,.beam,$1)

SRC = $(call get_src_from_dir_list, $(ERL_SOURCE_DIRS))
OBJ = $(call src_to_beam,$(SRC))
STUFF_TO_CLEAN += $(OBJ)

TEST_SRC = $(call get_src_from_dir_list, $(TEST_DIRS))
TEST_OBJ = $(call src_to_beam,$(TEST_SRC))
STUFF_TO_CLEAN += $(TEST_OBJ)

ALL_OBJ = $(OBJ) $(TEST_OBJ)
ALL_SRC = $(SRC) $(TEST_SRC)
 
all: $(OBJ)
	
%.beam: %.erl
	$(SILENCE)echo compiling $(notdir $<)
	$(SILENCE)$(ERLC) $(ERLC_FLAGS) -I./include -o $(EBIN_DIR) $<

debug:
	$(MAKE) DEBUG=-DDEBUG
	
test: all $(TEST_OBJ)
	$(ERL)	-noshell \
					-boot start_sasl \
					-sname local_test \
					-pa $(EBIN_DIR) \
					-s test_suite test \
					-s init stop

boot:
	$(ERL) -pa $(EBIN_DIR) -noshell -run make_boot write_scripts babysitter @PACKAGE_VERSION@
	mv babysitter-@PACKAGE_VERSION@.boot $(EBIN_DIR)
	mv babysitter-@PACKAGE_VERSION@.rel $(EBIN_DIR)
	mv babysitter-@PACKAGE_VERSION@.script $(EBIN_DIR)

clean:
	@(rm -rf $(EBIN_DIR)/*.beam erl_crash.dump)
 
install:
	install -d $(ERLDIR)/lib/$(PACKAGE_NAME)-$(PACKAGE_VERSION)
	cp -r `pwd`/$(EBIN_DIR) @ERLANG_INSTALL_LIB_DIR_babysitter@ 
